{
  "name": "playwright-image",
  "version": "1.0.0",
  "description": "UI视觉对比测试工具",
  "main": "dist/mcp-server.js",
  "type": "module",
  "scripts": {
    "test": "dotenv -e .env -- playwright test",
    "test:ui": "dotenv -e .env -- playwright test --ui",
    "test:local": "dotenv -e .env -- TARGET_URL=http://localhost:8080 playwright test",
    "test:remote": "dotenv -e .env -- playwright test",
    "test:mobile": "dotenv -e .env -- VIEWPORT_WIDTH=375 VIEWPORT_HEIGHT=667 playwright test",
    "test:element": "dotenv -e .env -- SELECTOR=.main-content playwright test",
    "test:ignore": "dotenv -e .env -- IGNORE_SELECTORS=.advertisement,.cookie-banner playwright test",
    "serve": "http-server . -p 8080",
    "test:debug": "dotenv -e .env -- playwright test --debug",
    "test:headed": "dotenv -e .env -- playwright test --headed",
    "test:inspect": "dotenv -e .env -- PWDEBUG=1 playwright test",
    "build": "tsc",
    "start": "node dist/mcp-server.js",
    "dev": "ts-node-dev --respawn src/mcp-server.ts",
    "mcp": "node dist/mcp-server.js"
  },
  "keywords": [
    "visual-testing",
    "playwright",
    "ui-testing",
    "mcp",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.3",
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "dotenv-cli": "^7.4.4",
    "http-server": "^14.1.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "express": "^4.18.2"
  }
}
