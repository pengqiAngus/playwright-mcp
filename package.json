{
  "name": "@anguske/mcp-playwright-visual-test",
  "version": "1.0.4",
  "description": "UI视觉对比测试工具 - 基于 Playwright 的视觉回归测试工具",
  "main": "build/index.js",
  "type": "module",
  "bin": "build/index.js",
  "files": [
    "build",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && shx chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "prepublishOnly": "npm run build",
    "mcp": "node build/index.js",
    "pub": "npm run build && npm publish"
  },
  "keywords": [
    "visual-testing",
    "playwright",
    "ui-testing",
    "mcp",
    "api",
    "visual-regression",
    "testing"
  ],
  "author": "kepengqi: kepengqi@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/playwright-mcp"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/node": "^20.11.19",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "shx": "^0.3.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "zod": "^3.24.2"
  }
}
